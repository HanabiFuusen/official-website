---
import Layout from '../layouts/Layout.astro'

const games = [
  {
    id: 'game01',
    title: '???????!!',
    tags: ['??', '???'],
    image: '/images/game01_cover.jpg',
  },
]
---

<Layout title="??">
  <!-- Hero Section with Game Carousel -->
  <section class="relative min-h-screen pt-16">
    <!-- Featured Game -->
    <div class="relative h-[80vh] overflow-hidden">
      <a href={`/games/${games[0].id}`} class="block h-full group">
        <!-- Background Image -->
        <div class="absolute inset-0">
          <img 
            src={games[0].image}
            alt={games[0].title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-gray-950 via-gray-950/50 to-transparent" />
          <div class="absolute inset-0 bg-gradient-to-r from-gray-950/80 via-transparent to-transparent" />
        </div>

        <!-- Content -->
        <div class="relative h-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-end pb-20">
          <div class="max-w-2xl">
            <!-- Tags -->
            <div class="flex gap-2 mb-4">
              {games[0].tags.map((tag) => (
                <span class="px-3 py-1 text-sm font-medium bg-pink-500/20 text-pink-400 rounded-full backdrop-blur-sm">
                  {tag}
                </span>
              ))}
            </div>

            <!-- Title -->
            <h1 class="text-4xl md:text-6xl font-black text-white mb-6 leading-tight">
              {games[0].title}
            </h1>

            <!-- CTA -->
            <span class="inline-flex items-center gap-2 px-6 py-3 bg-pink-500 hover:bg-pink-600 text-white font-medium rounded-full transition-all group-hover:gap-4">
              ????
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </div>
      </a>
    </div>

    <!-- Coming Soon Teaser -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <span class="inline-block px-4 py-1 text-sm font-medium bg-gray-800 text-gray-400 rounded-full mb-4">
          NEXT
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          ????!
        </h2>
        <p class="text-gray-400 text-lg">
          ??????????
        </p>
      </div>
    </div>

    <!-- Carousel Dots -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex gap-3">
      <button class="w-3 h-3 rounded-full bg-pink-500 transition-all" aria-label="Slide 1"></button>
      <button class="w-3 h-3 rounded-full bg-gray-600 hover:bg-gray-500 transition-all" aria-label="Slide 2"></button>
    </div>
  </section>
</Layout>

---
interface Props {
  title: string
  description: string
  image: string
  href: string
  tags?: string[]
}

const { title, description, image, href, tags = [] } = Astro.props
---

<a href={href} class="group block">
  <article class="bg-gray-900 rounded-2xl overflow-hidden border border-gray-800 hover:border-pink-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-pink-500/10">
    <!-- Image -->
    <div class="relative aspect-video overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-60" />
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {tags.map((tag) => (
            <span class="px-2 py-1 text-xs font-medium bg-pink-500/20 text-pink-400 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Title -->
      <h3 class="text-xl font-bold text-white mb-2 group-hover:text-pink-400 transition-colors">
        {title}
      </h3>

      <!-- Description -->
      <p class="text-gray-400 text-sm line-clamp-2">
        {description}
      </p>

      <!-- CTA -->
      <div class="mt-4 flex items-center gap-2 text-pink-400 text-sm font-medium">
        <span>了解更多</span>
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </div>
  </article>
</a>
